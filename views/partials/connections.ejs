<div id="processInfo" class="process-info-box" style="display: none;">
    <div class="process-info-header">
        <img class="process-icon-large" src="" alt="">
        <div class="process-info-title">
            <h2 class="process-name"></h2>
            <span class="process-status"></span>
        </div>
    </div>
    <div class="process-info-grid">
        <div class="info-item">
            <i class="fas fa-microchip"></i>
            <span class="label">PIDs:</span>
            <span class="pids-list"></span>
        </div>
        <div class="info-item">
            <i class="fas fa-user"></i>
            <span class="label">User:</span>
            <span class="user-name"></span>
        </div>
        <div class="info-item">
            <i class="fas fa-terminal"></i>
            <span class="label">Command:</span>
            <span class="command-line selectable"></span>
        </div>
        <div class="info-item">
            <i class="fas fa-memory"></i>
            <span class="label">Memory:</span>
            <span class="memory-usage"></span>
        </div>
    </div>
</div>
<div id="connections"></div> 